---
import RootLayout from '~/layouts/RootLayout.astro';
import LatestContent from '~/components/LatestContent.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '~/constants';
import logo from '~/assets/logo.png';
---

<RootLayout
  title={SITE_TITLE}
  shortDescription={SITE_DESCRIPTION}
  image={logo.src}
>
  <div class='mb-20'>
    <h1
      class='font-display text-5xl font-bold text-primary-600 dark:text-primary-100 sm:text-8xl'
    >
      Ops!
    </h1>
    <p class='prose my-6'>
      We couldn&apos;t find what you were looking for. Please try a different
      page
    </p>
    <a
      href='/'
      class='text-md font-body text-accent-500 underline underline-offset-4 hover:text-accent-400 dark:text-accent-400 dark:hover:text-accent-300'
    >
      Return to home
    </a>
  </div>

  <h2
    class='font-display text-2xl font-bold text-primary-600 dark:text-primary-100 sm:text-3xl'
  >
    You may be looking for this:
  </h2>

  <LatestContent />
</RootLayout>
