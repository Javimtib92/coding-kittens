---
import { type CollectionEntry, getCollection } from 'astro:content';
import RootLayout from '../../../layouts/RootLayout.astro';
import Heading1 from '../../../components/headings/Heading1.astro';
import Heading2 from '../../../components/headings/Heading2.astro';
import Heading3 from '../../../components/headings/Heading3.astro';
import Heading4 from '../../../components/headings/Heading4.astro';
import Heading5 from '../../../components/headings/Heading5.astro';
import Paragraph from '../../../components/Paragraph.astro';
import Quote from '../../../components/Quote.astro';
import Link from '../../../components/Link.astro';
import UnorderedList from '../../../components/UnorderedList.astro';
import OrderedList from '../../../components/OrderedList.astro';
import ListItem from '../../../components/ListItem.astro';
import { formatDate } from '../../../utils/date';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => {
    const segments = post.slug.split('/');
    const category = segments[0];
    const slug = segments[1];

    return {
      params: { category, slug },
      props: post,
    };
  });
}
type Props = CollectionEntry<'blog'>;

const post = Astro.props;

const { Content } = await post.render();
---

<RootLayout
  title={post.data.title}
  shortDescription={post.data.shortDescription}
  image={post.data.thumbnail.src}
>
  <section>
    <h1
      class='font-display text-4xl font-bold text-primary-600 dark:text-primary-100 sm:text-5xl'
    >
      {post.data.title}
    </h1>
    <div class='mb-8 mt-4 flex items-center justify-between text-sm'>
      <p class='subtle mb-0 mt-0 font-mono'>
        {
          /* Now is computed on the server but probably I need the locale here so that I can format based on locale */
        }
        {formatDate(post.data.pubDate)}
      </p>
      <p class='subtle mb-0 mt-0 font-mono'>
        {/* <ViewCount slug={slug} /> */}
      </p>
    </div>

    <article>
      <Content
        components={{
          h1: Heading1,
          h2: Heading2,
          h3: Heading3,
          h4: Heading4,
          h5: Heading5,
          p: Paragraph,
          a: Link,
          blockquote: Quote,
          ul: UnorderedList,
          ol: OrderedList,
          li: ListItem,
        }}
      />
    </article>
  </section>
</RootLayout>
