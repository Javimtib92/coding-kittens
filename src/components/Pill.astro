---
import colors from 'tailwindcss/colors';
import { cn } from '~/utils/cn';

type Color = keyof typeof colors;

type Props = {
  color: Color;
};
const { color = 'blue', ...props } = Astro.props;
---

<span
  class={cn(
    'relative inline-flex items-center rounded-full border-2 bg-primary-50 px-3 py-1 text-sm font-semibold text-white dark:bg-background-500'
  )}
  style={{
    borderColor: colors[color]['500'],
    color: colors[color]['600'],
  }}
  {...props}
>
  <span
    class='absolute left-1/2 h-full -translate-x-1/2 border border-red-300'
    style={{
      borderColor: colors[color]['500'],
    }}></span>
  <span
    class='pointer-events-none absolute right-0 z-2 h-full w-1/2 rounded-r-full border border-none opacity-20 outline-none'
    style={{
      background: `repeating-linear-gradient(45deg, transparent, transparent 2px,${colors[color]['500']} 2px,${colors[color]['500']} 3px)`,
    }}></span>
  <span class='bg-primary-50 dark:bg-background-500 z-1 text-xs'>
    <slot />
  </span>
</span>
