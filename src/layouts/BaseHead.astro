---
// Import the global.css file here so that it is included on
// all pages through the use of the <BaseHead /> component.
import '~/styles/global.css';
import '@fontsource/barlow-condensed/latin-400.css';
import '@fontsource/barlow-condensed/latin-700.css';
import '@fontsource-variable/montserrat/wght.css';
import '@fontsource/oxygen-mono/latin-400.css';

import barlowCondensed400Woff2 from '@fontsource/barlow-condensed/files/barlow-condensed-latin-400-normal.woff2?url';
import barlowCondensed700Woff2 from '@fontsource/barlow-condensed/files/barlow-condensed-latin-700-normal.woff2?url';
import oxygenMono400Woff2 from '@fontsource/oxygen-mono/files/oxygen-mono-latin-400-normal.woff2?url';
import montserratWoff2 from '@fontsource-variable/montserrat/files/montserrat-latin-wght-normal.woff2?url';

interface Props {
  title: string;
  description: string;
  image: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const { title, description, image } = Astro.props;
---

<!-- Global Metadata -->
<meta charset='utf-8' />
<meta name='viewport' content='width=device-width,initial-scale=1' />
<link rel='icon' type='image/x-icon' href='/favicon.ico' sizes='150x149' />
<link rel='sitemap' href='/sitemap-index.xml' />
<meta name='generator' content={Astro.generator} />

<!-- Font preloads -->
<link
  rel='preload'
  href={montserratWoff2}
  as='font'
  type='font/woff2'
  crossorigin
/>
<link
  rel='preload'
  href={barlowCondensed400Woff2}
  as='font'
  type='font/woff2'
  crossorigin
/>
<link
  rel='preload'
  href={barlowCondensed700Woff2}
  as='font'
  type='font/woff2'
  crossorigin
/>
<link
  rel='preload'
  href={oxygenMono400Woff2}
  as='font'
  type='font/woff2'
  crossorigin
/>

<!-- Canonical URL -->
<link rel='canonical' href={canonicalURL} />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name='title' content={title} />
<meta name='description' content={description} />

<!-- Open Graph / Facebook -->
<meta property='og:type' content='website' />
<meta property='og:url' content={Astro.url} />
<meta property='og:title' content={title} />
<meta property='og:description' content={description} />
<meta property='og:image' content={image} />

<script
  is:inline
  defer
  src='https://cdn.jsdelivr.net/npm/@alpinejs/intersect@3.x.x/dist/cdn.min.js'
></script>

<script
  is:inline
  defer
  src='https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js'></script>
